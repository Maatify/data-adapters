{
  "name": "maatify/data-adapters",
  "description": "Unified multi-driver data-adapter layer for Redis, MongoDB, and MySQL within the Maatify ecosystem.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Maatify.dev",
      "email": "support@maatify.dev"
    }
  ],
  "require": {
    "php": ">=8.4",
    "maatify/common": "dev-main",
    "maatify/psr-logger": "dev-main"
  },
  "suggest": {
    "ext-redis": "or high-performance native RedisAdapter",
    "ext-pdo": "Required for MySQLAdapter (PDO driver)",
    "ext-mongodb": "Required for MongoAdapter",
    "predis/predis": "Used as fallback when ext-redis is unavailable",
    "doctrine/dbal": "Optional advanced SQL driver for MySQLDbalAdapter"
  },
  "autoload": {
    "psr-4": {
      "Maatify\\DataAdapters\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Maatify\\DataAdapters\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml.dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
